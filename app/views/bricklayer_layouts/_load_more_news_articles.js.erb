//This file is called upon when the "load-more" button is pressed
//The ajax request: load_more.js is what calls it
//The function of this file is to update the bricklayer object in the DOM
<% if articles.blank? %>
  $('#load-more').remove()
  $('#loading-gif').remove()
  $('#complete').show()
<% else %>
  var articles_array = [];
  <% articles.each do |article| %>
    var new_card = document.createElement("div");
    new_card.className = "card"
    new_card.innerHTML= "<%= escape_javascript render 'bricklayer_layouts/append_news_articles.html.erb', article: article %>"
    articles_array.push(new_card);
  <% end %>

  bricklayer.append(articles_array)
  document.getElementById("data-container").value = "<%= articles.last.published_at %>";
<% end %>
